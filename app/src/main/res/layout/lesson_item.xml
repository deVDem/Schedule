<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/box_shape"
        android:backgroundTint="@color/card_color"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/numberLesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                tools:text="Номер урока" />

            <TextView
                android:id="@+id/textLesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/numberLesson"
                android:textColor="@color/text_bold_color"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Название урока" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="13:10-14:40" />

            <TextView
                android:id="@+id/textCab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textDate"
                android:layout_marginTop="3dp"
                android:gravity="end"
                tools:text="310" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>