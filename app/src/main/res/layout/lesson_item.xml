<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlLesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/box_shape"
        android:backgroundTint="@color/card_color"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/leftLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/rightll"
            android:orientation="vertical">

            <TextView
                android:id="@+id/numberLesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                tools:text="Номер урока" />

            <TextView
                android:id="@+id/textLesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_bold_color"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Название урока" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="13:10-14:40" />

            <TextView
                android:id="@+id/textCab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="end"
                tools:text="310" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>