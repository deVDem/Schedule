<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/harderbetterfasterstronger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom">

            <TextView
                android:id="@+id/harder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:text="Harder."
                android:textColor="@color/text_bold_color"
                android:textSize="32sp"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:ignore="HardcodedText,NestedWeights" />

            <TextView
                android:id="@+id/better"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=" Better."
                android:textColor="@color/text_bold_color"
                android:textSize="32sp"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top">

            <TextView
                android:id="@+id/faster"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Faster."
                android:textColor="@color/text_bold_color"
                android:textSize="32sp"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:ignore="HardcodedText,NestedWeights" />

            <TextView
                android:id="@+id/stronger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Stronger."
                android:textColor="@color/text_bold_color"
                android:textSize="32sp"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/motdlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/what_s_new"
            android:textColor="@color/text_bold_color"
            android:textSize="32sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttonRetry"
            android:layout_below="@id/textView4"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/motdText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
